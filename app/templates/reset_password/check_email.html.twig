{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <div class="w-100 d-flex justify-content-center align-items-center vh-100">
        <div class="card text-center bg-light-subtle" style="width: 600px;">
            <div class="card-header h5 text-white bg-primary">Check your email!</div>
            <div class="card-body px-5">
                <p class="card-text py-2">
                    If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.<br>
                    This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                </p>
                <p class="card-text py-2">
                    If you don't receive an email please check your spam folder or <a href="{{ path('web_reset_password_request') }}">try again</a>.
                </p>
            </div>
        </div>
    </div>
{% endblock %}
